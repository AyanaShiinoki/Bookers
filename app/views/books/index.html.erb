<div class="index">
	<% if flash[:notice3] %>
      <div class="flash">
        <%= flash[:notice3] %>
      </div>
    <% end %>



<h1>Books</h1>

	<table>
		<tr>
			<th>Title</th>	<th colspan="2">Body</th> 
		</tr>

	  	<% @books.each do |book| %>
	  	<tr>
	  	<td>
	  		<%=book.title%>
	  	</td>
	  	<td>
	  		<%=book.body%>
	  	</td>
	  	<td>
	  	<th><%=link_to "Show",book_path(book.id)%></th>
	  	<th><%=link_to "Edit",edit_book_path(book.id)%></th>
	  	<th><%= link_to "Destroy",book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>

	  </td>
		</tr>
		<% end %>
	</table>


<div class="newbox">


<h2>New book</h2>
<%= form_for(@book, url: '/books') do |f| %>

<!-- エラーメッセージ -->
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<!-- エラーメッセージ -->

<div class="newbox-text">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
</div>
<div class="newbox-text">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
</div>
<div class="create-book">
    <%= f.submit 'Create Book' %>
</div>
 
<% end %>
</div>

</div>